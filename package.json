    "openai": "^4.57.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.0.5",
    "sass": "^1.77.8",
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@nuxt/eslint": "^0.5.5",
    "@nuxtjs/color-mode": "^3.4.4",
    "@nuxtjs/stylelint-module": "^5.2.0",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@vueuse/core": "^11.0.3",
    "@vueuse/nuxt": "^11.0.3",
    "eslint": "^9.9.1",
    "lint-staged": "^15.2.10",
