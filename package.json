{
  "name": "nuxt-gpt",
  "private": true,
  "type": "module",
  "author": "Landen English",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "local": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint --fix . && vue-tsc --noEmit && stylelint \"**/*.{css,scss,vue}\" --fix",
    "format": "prettier --write .",
    "lint-staged": "lint-staged"
